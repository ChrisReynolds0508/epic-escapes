<div class="container mx-auto p-4">
  <h2 class="text-2xl font-bold mb-6">Post a Review</h2>
  <form class="new-review-form bg-white shadow-md rounded-lg p-6 mb-6" action="/api/review" method="POST">
    <div class="form-group mb-4">
      <label for="city_name" class="block text-gray-700 mb-2">City Name:</label>
      <input class="form-input w-full p-2 border border-gray-300 rounded-lg" type="text" id="city_name" name="city_name" required />
    </div>
    <div class="form-group mb-4">
      <label for="review" class="block text-gray-700 mb-2">Review:</label>
      <textarea class="form-input w-full p-2 border border-gray-300 rounded-lg" id="review" name="review" required></textarea>
    </div>
    <div class="form-group text-center">
      <button class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600" type="submit">Post Review</button>
    </div>
  </form>
  <h2 class="text-2xl font-bold mb-6">All Reviews</h2>
  <div class="review-list">
    {{#each reviews}}
      <div class="review-item bg-white shadow-md rounded-lg p-6 mb-6" data-id="{{this.id}}">
        <h3 class="text-xl font-semibold mb-2">{{this.city_name}} by {{this.user.name}} <span class="text-red-400">{{format_date date_created}}</span></h3>  <!-- Render city name and user name -->
        <p class="text-gray-700 mb-4">{{this.review}}</p>
        <button class="bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600 btn-delete" data-id="{{this.id}}">Delete</button>
      </div>
    {{else}}
      <p class="text-gray-500">No reviews found.</p>
    {{/each}}
  </div>
</div>


<script src="/js/review.js"></script>
